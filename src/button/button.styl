yes-color = #4eb7a8
yes-border-color = #28a290
no-color = #e75735
no-border-color = #cc4626

.button
    margin 0 20px
    display inline-block
    border-width 1px
    border-style solid
    border-radius 5px
    color black
    background white
    font-weight bold
    text-align center
    text-decoration none
    text-transform uppercase
    &:hover
        color white
        cursor  pointer
    &:hover
    &:active
    &:visited
        text-decoration none
.button-small
    width 75px;
    height 20px;
    line-height 20px;
    border-bottom-width 2px;
    font-size 10px;
.button-large
    width 115px
    height 30px
    line-height 30px
    border-bottom-width 3px
    font-size 12px
.button-yes
    color yes-color
    border-color yes-border-color
    &:hover
        background yes-color
.button-no
    color no-color
    border-color no-border-color
    &:hover
        background no-color