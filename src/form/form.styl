yes-color = #4eb7a8
light-gray-bg = #e5e5e5
dark-gray-text = #888888

.form-container
    margin 0 auto
    width 290px


.form
    width 100%
    margin-bottom 50px
    box-sizing border-box
    vertical-align middle
.input-message
    display none
    position relative
    width 76px
    height 28px
    text-align center
    color white
    font-size 12px
    font-weight bold
    text-transform uppercase
    line-height 28px
.input
    box-sizing border-box
    display inline-block
    margin 0
    padding 0
    margin-bottom 12px
    position relative
    width 100%
    height 28px
    font-size 14px
    font-family 'PT Sans', sans-serif
    letter-spacing 1px
    line-height 28px
    padding-left 12px
    color dark-gray-text
    background-color light-gray-bg
    border-radius 5px
    border none
    &:focus
        border 1px solid red
.input-text
    &:not(:focus)
        &:valid
            width 207px
            & + label
                display inline-block
                background-image url("img/Slider-bubble-bg-copy.png")
                background-repeat no-repeat
                &:before
                    content "thanks!"
        &:invalid
            width 207px
            & + label
                display inline-block
                background-image url("img/Slider-bubble-bg.png")
                background-repeat no-repeat
                &:before
                    content "error"
.textarea
    display block
    box-sizing border-box
    width 100%
    height 90px
    resize none
    margin-bottom 12px
    font-size 14px
    font-family 'PT Sans', sans-serif
    letter-spacing 1px
    padding-top 12px
    padding-left 12px
    color dark-gray-text
    background-color light-gray-bg
    border-radius 5px
    border none
.button-submit
    display block
    position relative
    background yes-color
    color white
    margin 0
    margin-left 173px